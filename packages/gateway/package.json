{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@aurajs/gateway",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/types-docs/index.d.ts",
  "exports": [
    {
      "types": "./dist/types-docs/index.d.ts",
      "require": "./dist/index.js"
    }
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:delete": "npm run delete:dist:windows && npm run build",
    "build:watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "delete:dist:windows": "rmdir /S /Q dist"
  },
  "dependencies": {
    "@aurajs/core": "workspace:*",
    "@aurajs/types": "workspace:*",
    "eventemitter3": "^5.0.1",
    "tslib": "^2.6.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10"
  }
}
