{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@aurajs/ts-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
