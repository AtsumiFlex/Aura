{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../apps/foo/tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "declaration"
  ]
}
