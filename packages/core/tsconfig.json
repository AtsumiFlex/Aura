{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@lunajs/ts-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}