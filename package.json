{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "aurajs",
  "private": true,
  "packageManager": "bun@1.1.4",
  "scripts": {
    "dev": "turbo dev",
    "start": "turbo start",
    "build": "turbo build",
    "lint": "turbo lint"
  },
  "devDependencies": {
    "@aurajs/eslint-config": "workspace:*",
    "@aurajs/typescript-config": "workspace:*",
    "@types/node": "latest",
    "@types/bun": "latest",
    "turbo": "latest"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ]
}