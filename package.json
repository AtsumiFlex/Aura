{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "aurajs",
  "version": "1.0.0",
  "packageManager": "bun@1.1.6",
  "readme": "README.md",
  "license": "AGPL-3.0-only",
  "description": "Aurajs is a monorepo for building web applications with TypeScript.",
  "author": {
    "name": "AtsumiFlex",
    "url": "https://github.com/AtsumiFlex"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aurajs.git"
  },
  "scripts": {
    "build": "turbo build",
    "build:watch": "turbo build:watch",
    "lint": "turbo lint",
    "test": "turbo test"
  },
  "devDependencies": {
    "@aurajs/eslint-config": "workspace:*",
    "@aurajs/ts-config": "workspace:*",
    "turbo": "latest",
    "typedoc": "^0.25.13"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ]
}
